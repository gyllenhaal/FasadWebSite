<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
   <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
     <script src="~/Scripts/jquery-1.8.2.js"></script>

</head>
<body>
    <div id="header">
       
              
         <div style="float:right;padding-top: 1.6em;padding-right:20px" id="topmenu">
         @{
            Html.RenderAction("TopMenu","Nav");
          }
        </div>
         
        <div class="title">
                      @Html.ActionLink("ІННОВАЦІЙНІ ФАСАДНІ СИСТЕМИ", "Index", "Home", new { }, new {@class = "title_link" })
        </div>
       </div>
   
    <div style="float:left;padding-top: 1em"  id="categories">
         @{
            Html.RenderAction("Menu","Nav");
          }
    </div>
    
    <div id="content">
      @RenderBody()
  
    @RenderSection("scripts", required: false)
          </div>
    
</body>

</html>
